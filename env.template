# ============================================
# Minuteserv Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Command: cp env.template .env

# ============================================
# SUPABASE (REQUIRED)
# ============================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# 1. Go to Project Settings > API
# 2. Copy "Project URL" → SUPABASE_URL
# 3. Copy "service_role" key (NOT anon key!) → SUPABASE_SERVICE_ROLE_KEY
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# JWT AUTHENTICATION (Optional but recommended)
# ============================================
# Generate a random secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# RAZORPAY PAYMENT (OPTIONAL - for payments)
# ============================================
# Get from: https://dashboard.razorpay.com/app/keys
# Only needed if you want payment functionality
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ============================================
# SERVER CONFIGURATION (Optional)
# ============================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================
# ADMIN USER (Optional - for setup scripts)
# ============================================
ADMIN_EMAIL=admin@minuteserv.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User
